<div class="container">
    <h1 class="col-sm-6 col-sm-offset-3 text-center">{{title}}</h1>
    <form action="/users/update/{{employe._id}}" method="post">

     <div class="form-group col-sm-6 col-sm-offset-3">
            <label for="name">Name:</label>
            <input type="text" name="name" value="{{employe.name}}" class="form-control" required>
    </div>
         <div class="form-group col-sm-6 col-sm-offset-3">
            <label for="Age">Age:</label>
            <input type="number" name="age" value="{{employe.age}}" class="form-control" required>
            </div>
              <div class="form-group col-sm-6 col-sm-offset-3">
            <label for="salary">Salary</label>
            <input type="number" name="salary" value="{{employe.salary}}" class="form-control" required>
              </div>
              <div class="form-group col-sm-6 col-sm-offset-3">
            <label for="email">Email</label>
            <input type="email" name="email" value="{{employe.email}}" class="form-control" required>
              </div>
              <div class="form-group col-sm-6 col-sm-offset-3">
            <label for="remarks">Remarks</label>
            <input type="text" name="remarks" value="{{employe.remarks}}" class="form-control" required>
            </div>
             <div class="form-group col-sm-6 col-sm-offset-3">
            {{!-- <label for="password">Confirm Password:</label> --}}
            {{!-- <input type="password" name="password2" class="form-control" required><br> --}}
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <input type="submit" value="Edit" class="btn btn-primary">

         </form>
</div>